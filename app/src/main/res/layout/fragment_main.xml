<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/ingr_spinner1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:overlapAnchor="false"
            android:textColor="@color/text_color"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/ingr_spinner2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ingr_spinner1"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:overlapAnchor="false"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/ingr_spinner3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ingr_spinner2"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:overlapAnchor="false"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/ingr_spinner4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ingr_spinner3"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:overlapAnchor="false"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/ingr_spinner5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ingr_spinner4"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:overlapAnchor="false"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ingr_spinner5" />


    </RelativeLayout>

    <Button
        android:id="@+id/search_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/search_btn_text"
        android:textColor="@color/white" />

</RelativeLayout>
